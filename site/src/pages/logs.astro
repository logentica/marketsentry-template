---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="MarketSentry — Logs (Demo)">
  <section class="py-10 lg:py-14">
    <div class="container">
      <div class="mb-8">
        <h1 class="text-gray-900">Logs</h1>
        <p class="text-lg text-gray-600 max-w-3xl">
          Demo run history and event logs. In production this would be fed by the bot worker.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 card">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl text-gray-900">Run Timeline</h2>
            <div class="flex gap-2">
              <button class="btn btn-secondary text-sm" type="button">Refresh</button>
              <button class="btn btn-primary text-sm" type="button">Run Now (Dry)</button>
            </div>
          </div>

          <div class="space-y-3 text-sm">
            <div class="border border-gray-100 rounded p-3">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-900">Run #1842</div>
                <div class="text-gray-500">00:01:12</div>
              </div>
              <div class="text-gray-600 mt-1">3 alerts generated • 0 errors</div>
            </div>
            <div class="border border-gray-100 rounded p-3">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-900">Run #1841</div>
                <div class="text-gray-500">00:00:58</div>
              </div>
              <div class="text-gray-600 mt-1">1 alert generated • 0 errors</div>
            </div>
            <div class="border border-gray-100 rounded p-3">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-900">Run #1840</div>
                <div class="text-gray-500">00:01:05</div>
              </div>
              <div class="text-gray-600 mt-1">0 alerts • 0 errors</div>
            </div>
          </div>
        </div>

        <aside class="card">
          <h3 class="text-lg text-gray-900">Latest Events</h3>
          <div class="mt-4 space-y-3 text-sm text-gray-700">
            <div class="border border-gray-100 rounded p-3 bg-white">
              <div class="font-medium">[ALERT] Odds threshold crossed</div>
              <div class="text-gray-500">BTC &gt; $100k by Dec • +3.2%</div>
            </div>
            <div class="border border-gray-100 rounded p-3 bg-white">
              <div class="font-medium">[INFO] Cooldown active</div>
              <div class="text-gray-500">recession market • 28m remaining</div>
            </div>
            <div class="border border-gray-100 rounded p-3 bg-white">
              <div class="font-medium">[INFO] Connector (Discord)</div>
              <div class="text-gray-500">demo mode • no messages sent</div>
            </div>
          </div>

          <div class="mt-6">
            <a href="/settings" class="btn btn-secondary text-sm w-full text-center">Open Settings</a>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
